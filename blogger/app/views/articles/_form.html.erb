
<%= form_for(@article, html: {multipart: true}) do |f| %>
<ul>

  <% @article.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>

</ul>

<p>
  
  <% if @article.image.exists? %>
    <%= image_tag @article.image.url %><br/>
  <% end %>
  <%= f.label :image, "Attach an Image" %><br />
  <%= f.file_field :image %>

</p>

<p><%= f.label :title, class: 'label' %> <br/>
  <%= f.text_field :title , class: "text-field-input" %>
</p>
<p>

  <%= f.label :body, class: 'label' %><br />
  <%= f.text_area :body, class: "text-body-input" %>

</p>

<p>
  <%= f.label :tag_list, class: 'label' %><br />
  <%= f.text_field :tag_list , class: "text-field-input" %>
</p>

<p>

  <%= f.submit 'Submit', class: 'btn submit' %>

</p>

<% end %>

<%= link_to "<< Back to Article Lists ", articles_path %>
